<p id="notice"><%= notice %></p>

<h1>Holes</h1>

<table>
  <thead>
    <tr>
      <th>Hole number</th>
      <th>Picture</th>
      <th>Par</th>
      <th>Yards</th>
      <th>Handicap</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @holes.each do |hole| %>
      <tr>
        <td><%= hole.hole_number %></td>
        <td><%= hole.picture %></td>
        <td><%= hole.par %></td>
        <td><%= hole.yards %></td>
        <td><%= hole.handicap %></td>
        <td><%= Course.find(hole.course_id).name %></td>
        <td>
          <%= link_to 'Show', hole %>
          <br />
          <%= link_to 'Edit', edit_hole_path(hole) %>
          <br />
          <%= link_to 'Destroy', hole, method: :delete,
            data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

