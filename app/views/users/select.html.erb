<p id="notice"><%= notice %></p>

<h1>Users</h1>
<h2>Select your profile</h2>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Picture</th>
    <th>Handicap</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= image_tag(user.picture, class: 'list_image') %></td>
        <td><%= user.handicap %></td>
        <td><%= link_to 'Show', user %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>